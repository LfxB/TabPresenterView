{
    "name": "Tab Presenter View",
    "version": "1.0",
    "description": "Mirror your tab on another monitor!",
	"options_ui": {
		"page": "html/options.html",
		"open_in_tab": true
	},
	"permissions": ["storage","tabCapture","tabs"],
	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
    },
	"browser_action": {
        "default_title": "Display this tab!"
    },
    "manifest_version": 2
  }